{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "@root/*": ["./*"]
        }
    },
    "include": ["src/*"]
}
